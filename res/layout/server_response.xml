<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onpu.museum.MainActivity" >

    <Button
        android:id="@+id/butNextElem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Next element" />

    <TextView
        android:id="@+id/tvCatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="No category" />

    <TextView
        android:id="@+id/tvCatDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCatName"
        android:layout_below="@+id/tvCatName"
        android:layout_marginTop="28dp"
        android:text="No category description" />

    <TextView
        android:id="@+id/tvElemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCatDesc"
        android:layout_below="@+id/tvCatDesc"
        android:layout_marginTop="29dp"
        android:text="No element" />

    <ImageView
        android:id="@+id/imgElem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvElemDesc"
        android:layout_below="@+id/tvElemDesc"
        android:layout_marginTop="27dp"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

</RelativeLayout>
